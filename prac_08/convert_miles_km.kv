BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.45
        TextInput:
            id: user_input
            font_size: 80
            on_text_validate: app.handle_conversion()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    BoxLayout:
        orientation: 'vertical'
        Button:
            font_size: 50
            text: 'Convert miles to km'
            on_press: app.handle_conversion(user_input.text)
        Label:
            id: output_label
            font_size: 80
            color: (100, 100, 0, 1)

